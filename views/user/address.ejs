<%- include("../../views/partials/user/header") %>

<!-- Include SweetAlert2 CSS -->
<link href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" rel="stylesheet">
<!-- Include Animate.css for animations -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">

<style>
:root {
    --primary: #1a1a1a;
    --secondary: #f9f9f9;
    --accent: #d4af37;
    --text: #2d2d2d;
    --light-text: #6b7280;
    --border: #e5e7eb;
    --shadow: rgba(0, 0, 0, 0.05);
    --gradient: linear-gradient(135deg, #d4af37 0%, #1a1a1a 100%);
    --danger: #e74c3c;
    --success: #2ecc71;
}

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: 'Poppins', sans-serif;
}

body {
    background-color:#f8f8f8;
    color: var(--text);
    overflow-x: hidden;
}

/* Container */
.container.mt-5 {
    max-width: 1300px;
    padding: 0 30px;
    margin-top: 50px !important;
}

/* Banner Area */
.banner-area {
    padding: 100px 0;
    background: var(--gradient);
    box-shadow: 0 4px 20px var(--shadow);
    border-radius: 12px;
    margin-bottom: 40px;
}

.breadcrumb-banner {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: space-between;
    gap: 20px;
}

.breadcrumb-banner h1 {
    font-size: 40px;
    font-weight: 700;
    color: #ffffff;
    margin-bottom: 15px;
    position: relative;
    letter-spacing: 1px;
}

.breadcrumb-banner h1::after {
    content: '';
    position: absolute;
    bottom: -10px;
    left: 0;
    width: 80px;
    height: 3px;
    background-color: var(--accent);
    transition: width 0.3s ease;
}

.breadcrumb-banner h1:hover::after {
    width: 120px;
}

.breadcrumb-banner nav {
    display: flex;
    align-items: center;
    font-size: 16px;
    color: var(--light-text);
}

.breadcrumb-banner nav a {
    color: #ffffff;
    text-decoration: none;
    margin: 0 8px;
    position: relative;
    transition: color 0.3s ease;
}

.breadcrumb-banner nav a:hover {
    color: var(--accent);
}

.breadcrumb-banner nav a::after {
    content: '';
    position: absolute;
    width: 100%;
    height: 2px;
    background: var(--accent);
    left: 0;
    bottom: -4px;
    transform: scaleX(0);
    transform-origin: right;
    transition: transform 0.3s ease;
}

.breadcrumb-banner nav a:hover::after {
    transform: scaleX(1);
    transform-origin: left;
}

.lnr-arrow-right {
    margin: 0 8px;
    color: #ffffff;
}

.col-left {
    display: flex;
    align-items: center;
    gap: 25px;
}

.profile-image-container {
    position: relative;
}

.rounded-circle {
    width: 90px;
    height: 90px;
    border-radius: 50%;
    object-fit: cover;
    border: 3px solid #ffffff;
    box-shadow: 0 4px 12px var(--shadow);
    transition: transform 0.3s ease;
}

.rounded-circle:hover {
    transform: scale(1.05);
}

.ms-3 {
    margin-left: 20px;
}

#fullName {
    font-size: 24px;
    font-weight: 600;
    color: #ffffff;
    letter-spacing: 0.5px;
}

#email {
    font-size: 16px;
    color: var(--light-text);
}

/* Sidebar */
.profile-sidebar {
    background-color: #ffffff;
    border-radius: 12px;
    padding: 25px;
    box-shadow: 0 6px 20px var(--shadow);
    margin-bottom: 40px;
    transition: transform 0.3s ease;
}

.profile-sidebar:hover {
    transform: translateY(-5px);
}

.profile-sidebar h3 {
    font-size: 22px;
    font-weight: 600;
    color: var(--primary);
    margin-bottom: 25px;
    border-bottom: 2px solid var(--accent);
    padding-bottom: 10px;
}

.profile-sidebar ul {
    list-style: none;
}

.profile-sidebar ul li {
    margin-bottom: 18px;
}

.profile-sidebar ul li a {
    font-size: 16px;
    color: var(--text);
    text-decoration: none;
    display: flex;
    align-items: center;
    padding: 10px;
    border-radius: 8px;
    transition: background-color 0.3s ease, color 0.3s ease;
}

.profile-sidebar ul li a:hover,
.profile-sidebar ul li a.active {
    background-color: var(--accent);
    color: #ffffff;
}

.profile-sidebar ul li a svg {
    margin-right: 12px;
}

/* Main Content */
.main-content {
    background-color: #ffffff;
    border-radius: 12px;
    padding: 35px;
    box-shadow: 0 6px 20px var(--shadow);
    transition: transform 0.3s ease;
}

.main-content:hover {
    transform: translateY(-5px);
}

.main-content h1 {
    font-size: 28px;
    font-weight: 700;
    color: var(--primary);
    margin-bottom: 25px;
    border-bottom: 2px solid var(--accent);
    padding-bottom: 10px;
}

.bg-white.p-4.shadow-sm.mb-4 {
    background-color: #ffffff;
    padding: 25px;
    border-radius: 12px;
    box-shadow: 0 4px 15px var(--shadow);
    margin-bottom: 25px;
    transition: all 0.3s ease;
    border-left: 4px solid var(--accent);
}

.bg-white.p-4.shadow-sm.mb-4:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 25px var(--shadow);
}

.d-flex.justify-content-between.align-items-center.border-bottom.pb-2.mb-2 {
    border-bottom: 1px solid var(--border);
    padding-bottom: 15px;
    margin-bottom: 15px;
}

.font-weight-bold {
    font-size: 22px;
    font-weight: 600;
    color: var(--primary);
}

.text-muted {
    color: var(--light-text);
    font-size: 15px;
}

.text-muted span {
    display: inline-block;
}

.ml-4 {
    margin-left: 20px;
}

.bg-white.p-4.shadow-sm.mb-4 p {
    color: var(--text);
    font-size: 16px;
    line-height: 1.8;
    margin-bottom: 12px;
}

.mt-2 {
    margin-top: 12px;
}

.text-primary {
    color: var(--accent) !important;
    font-weight: 500;
    transition: all 0.3s ease;
    cursor: pointer;
    text-decoration: none;
    padding: 5px 10px;
    border-radius: 5px;
    margin-right: 10px;
}

.text-primary:hover {
    color: #b89c2f !important;
    background-color: rgba(212, 175, 55, 0.1);
    text-decoration: none;
}

.text-danger {
    color: var(--danger) !important;
    font-weight: 500;
    transition: all 0.3s ease;
    cursor: pointer;
    text-decoration: none;
    padding: 5px 10px;
    border-radius: 5px;
}

.text-danger:hover {
    color: #c0392b !important;
    background-color: rgba(231, 76, 60, 0.1);
    text-decoration: none;
}

/* Button */
.btn.btn-add {
    display: inline-block;
    padding: 14px 35px;
    background: linear-gradient(135deg, #d4af37 0%, rgb(18, 14, 14) 100%);
    color: #ffffff;
    font-weight: 600;
    border-radius: 8px;
    border: none;
    text-transform: uppercase;
    letter-spacing: 1.2px;
    font-size: 14px;
    transition: all 0.3s ease;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
}

.btn.btn-add:hover {
    background-color: linear-gradient(135deg, #d4af37 0%, rgb(255, 255, 255) 100%);
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
    transform: translateY(-2px);
    /* box-shadow: 0 6px 15px rgba(0, 0, 0, 0.15); */
}

.go-button {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    padding: 15px 25px;
    background: linear-gradient(135deg, var(--primary), #2c3e50);
    color: white;
    text-decoration: none;
    border-radius: 10px;
    font-weight: 500;
    transition: all 0.3s ease;
    margin-top: -25px;
}

.go-button:hover {
    transform: translateY(-3px);
    box-shadow: 0 10px 25px rgba(26, 26, 26, 0.3);
    text-decoration: none;
    color: white;
}

/* Custom SweetAlert2 styles */
.swal-custom-popup {
    border-radius: 15px !important;
    font-family: 'Poppins', sans-serif !important;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15) !important;
}

.swal-custom-title {
    color: var(--primary) !important;
    font-weight: 600 !important;
    font-size: 24px !important;
}

.swal-custom-content {
    color: var(--text) !important;
    font-size: 16px !important;
}

.swal-custom-confirm {
    background-color: var(--accent) !important;
    border: none !important;
    border-radius: 8px !important;
    padding: 12px 25px !important;
    font-weight: 500 !important;
    font-size: 14px !important;
    transition: all 0.3s ease !important;
    text-transform: uppercase !important;
    letter-spacing: 0.5px !important;
}

.swal-custom-confirm:hover {
    background-color: #b89c2f !important;
    transform: translateY(-2px) !important;
    box-shadow: 0 6px 15px rgba(0, 0, 0, 0.15) !important;
}

.swal-custom-confirm-danger {
    background-color: var(--danger) !important;
    border: none !important;
    border-radius: 8px !important;
    padding: 12px 25px !important;
    font-weight: 500 !important;
    font-size: 14px !important;
    transition: all 0.3s ease !important;
    text-transform: uppercase !important;
    letter-spacing: 0.5px !important;
}

.swal-custom-confirm-danger:hover {
    background-color: #c0392b !important;
    transform: translateY(-2px) !important;
    box-shadow: 0 6px 15px rgba(231, 76, 60, 0.15) !important;
}

.swal-custom-cancel {
    background-color: var(--light-text) !important;
    border: none !important;
    border-radius: 8px !important;
    padding: 12px 25px !important;
    font-weight: 500 !important;
    font-size: 14px !important;
    transition: all 0.3s ease !important;
    text-transform: uppercase !important;
    letter-spacing: 0.5px !important;
}

.swal-custom-cancel:hover {
    background-color: #4b5563 !important;
    transform: translateY(-2px) !important;
    box-shadow: 0 6px 15px rgba(107, 114, 128, 0.15) !important;
}

.swal-custom-icon {
    border: 3px solid var(--danger) !important;
}

/* No Address State */
.no-address-container {
    text-align: center;
    padding: 60px 20px;
    background-color: #ffffff;
    border-radius: 12px;
    box-shadow: 0 4px 15px var(--shadow);
    margin-bottom: 25px;
}

.no-address-container h2 {
    color: var(--primary);
    font-size: 24px;
    margin-bottom: 15px;
    font-weight: 600;
}

.no-address-container p {
    color: var(--light-text);
    font-size: 16px;
    margin-bottom: 30px;
}

/* Responsive Design */
@media (max-width: 992px) {
    .row {
        flex-direction: column;
    }

    .profile-sidebar {
        margin-bottom: 30px;
    }

    .main-content {
        padding: 25px;
    }
}

@media (max-width: 768px) {
    .banner-area {
        padding: 70px 0;
    }

    .breadcrumb-banner h1 {
        font-size: 32px;
    }

    .breadcrumb-banner nav {
        font-size: 14px;
    }

    .bg-white.p-4.shadow-sm.mb-4 {
        padding: 20px;
    }

    .font-weight-bold {
        font-size: 20px;
    }

    .btn.btn-add {
        font-size: 13px;
        padding: 12px 25px;
    }
}

@media (max-width: 576px) {
    .container.mt-5 {
        padding: 0 20px;
    }

    .col-left {
        flex-direction: column;
        align-items: flex-start;
        gap: 15px;
    }

    .ms-3 {
        margin-left: 0;
        margin-top: 12px;
    }

    .rounded-circle {
        width: 70px;
        height: 70px;
    }
}
</style>

