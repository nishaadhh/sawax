<script>
    // Show loading overlay
    function showLoading(title = 'Processing...', text = 'Please wait...') {
        Swal.fire({
            title: title,
            text: text,
            allowOutsideClick: false,
            allowEscapeKey: false,
            showConfirmButton: false,
            customClass: {
                popup: 'swal-custom-popup',
                title: 'swal-custom-title',
                content: 'swal-custom-content'
            },
            didOpen: () => {
                Swal.showLoading();
            }
        });
    }

    // Hide loading overlay
    function hideLoading() {
        Swal.close();
    }

    // Preview uploaded image
    function previewImage(event) {
        const file = event.target.files[0];
        const reader = new FileReader();

        reader.onload = function(e) {
            document.getElementById('profileImage').src = e.target.result;
        }

        if (file) {
            reader.readAsDataURL(file);
        }
    }

    // Edit Address with SweetAlert2
    function editAddress(addressId) {
        Swal.fire({
            title: 'Edit Address',
            text: 'You will be redirected to the address editing page.',
            icon: 'info',
            showCancelButton: true,
            confirmButtonColor: '#d4af37',
            cancelButtonColor: '#6b7280',
            confirmButtonText: '<i class="fas fa-edit"></i> Edit Address',
            cancelButtonText: '<i class="fas fa-times"></i> Cancel',
            customClass: {
                popup: 'swal-custom-popup',
                title: 'swal-custom-title',
                content: 'swal-custom-content',
                confirmButton: 'swal-custom-confirm',
                cancelButton: 'swal-custom-cancel'
            },
            backdrop: `rgba(0,0,0,0.4)`,
            showClass: {
                popup: 'animate__animated animate__fadeInDown animate__faster'
            },
            hideClass: {
                popup: 'animate__animated animate__fadeOutUp animate__faster'
            }
        }).then((result) => {
            if (result.isConfirmed) {
                showLoading('Redirecting...', 'Taking you to the edit page...');
                window.location.href = `/editAddress?id=${addressId}`;
            }
        });
    }

    // Delete Address with enhanced SweetAlert2 confirmation
    function deleteAddress(addressId) {
        Swal.fire({
            title: 'Are you sure?',
            text: "This action cannot be undone! Your address will be permanently deleted.",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#e74c3c',
            cancelButtonColor: '#6b7280',
            confirmButtonText: '<i class="fas fa-trash"></i> Yes, Delete It!',
            cancelButtonText: '<i class="fas fa-times"></i> Cancel',
            customClass: {
                popup: 'swal-custom-popup',
                title: 'swal-custom-title',
                content: 'swal-custom-content',
                confirmButton: 'swal-custom-confirm-danger',
                cancelButton: 'swal-custom-cancel',
                icon: 'swal-custom-icon'
            },
            backdrop: `rgba(0,0,0,0.4)`,
            showClass: {
                popup: 'animate__animated animate__fadeInDown animate__faster'
            },
            hideClass: {
                popup: 'animate__animated animate__fadeOutUp animate__faster'
            },
            focusCancel: true,
            reverseButtons: true
        }).then((result) => {
            if (result.isConfirmed) {
                // Show loading while deleting
                showLoading('Deleting Address...', 'Please wait while we remove your address.');
                
                // Redirect to delete endpoint
                setTimeout(() => {
                    window.location.href = `/deleteAddress?id=${addressId}`;
                }, 500);
            }
        });
    }

    // Check for URL parameters and show appropriate messages
    window.addEventListener('DOMContentLoaded', function() {
        const urlParams = new URLSearchParams(window.location.search);
        
        // Handle deletion success
        if (urlParams.get('deleted') === 'true') {
            Swal.fire({
                title: 'Deleted Successfully!',
                text: 'Your address has been permanently removed.',
                icon: 'success',
                confirmButtonColor: '#2ecc71',
                confirmButtonText: '<i class="fas fa-check"></i> OK',
                customClass: {
                    popup: 'swal-custom-popup',
                    title: 'swal-custom-title',
                    content: 'swal-custom-content',
                    confirmButton: 'swal-custom-confirm'
                },
                showClass: {
                    popup: 'animate__animated animate__fadeInDown animate__faster'
                },
                hideClass: {
                    popup: 'animate__animated animate__fadeOutUp animate__faster'
                },
                timer: 3000,
                timerProgressBar: true
            }).then(() => {
                // Clean up URL
                window.history.replaceState({}, document.title, window.location.pathname);
            });
        }
        
        // Handle deletion error
        if (urlParams.get('error')) {
            const errorMessage = urlParams.get('error').replace(/\+/g, ' ');
            Swal.fire({
                title: 'Error!',
                text: errorMessage,
                icon: 'error',
                confirmButtonColor: '#e74c3c',
                confirmButtonText: '<i class="fas fa-times"></i> OK',
                customClass: {
                    popup: 'swal-custom-popup',
                    title: 'swal-custom-title',
                    content: 'swal-custom-content',
                    confirmButton: 'swal-custom-confirm-danger'
                },
                showClass: {
                    popup: 'animate__animated animate__fadeInDown animate__faster'
                },
                hideClass: {
                    popup: 'animate__animated animate__fadeOutUp animate__faster'
                }
            }).then(() => {
                // Clean up URL
                window.history.replaceState({}, document.title, window.location.pathname);
            });
        }
    });

    // Optional: Reset Password function (if needed)
    function resetPassword() {
        Swal.fire({
            title: 'Reset Password',
            text: 'You will be redirected to the password reset page.',
            icon: 'info',
            showCancelButton: true,
            confirmButtonColor: '#d4af37',
            cancelButtonColor: '#6b7280',
            confirmButtonText: '<i class="fas fa-key"></i> Reset Password',
            cancelButtonText: '<i class="fas fa-times"></i> Cancel',
            customClass: {
                popup: 'swal-custom-popup',
                title: 'swal-custom-title',
                content: 'swal-custom-content',
                confirmButton: 'swal-custom-confirm',
                cancelButton: 'swal-custom-cancel'
            }
        }).then((result) => {
            if (result.isConfirmed) {
                showLoading('Redirecting...', 'Taking you to the reset page...');
                window.location.href = '/reset-password';
            }
        });
    }

    // Add some interactive feedback for buttons
    document.addEventListener('DOMContentLoaded', function() {
        // Add ripple effect to buttons
        const buttons = document.querySelectorAll('.btn, .go-button');
        buttons.forEach(button => {
            button.addEventListener('click', function(e) {
                const ripple = document.createElement('span');
                const rect = this.getBoundingClientRect();
                const size = Math.max(rect.width, rect.height);
                const x = e.clientX - rect.left - size / 2;
                const y = e.clientY - rect.top - size / 2;
                
                ripple.style.width = ripple.style.height = size + 'px';
                ripple.style.left = x + 'px';
                ripple.style.top = y + 'px';
                ripple.classList.add('ripple');
                
                this.appendChild(ripple);
                
                setTimeout(() => {
                    ripple.remove();
                }, 600);
            });
        });
    });
</script>

<style>
/* Ripple effect for buttons */
.btn, .go-button {
    position: relative;
    overflow: hidden;
}

.ripple {
    position: absolute;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.3);
    transform: scale(0);
    animation: ripple-animation 0.6s linear;
    pointer-events: none;
}

@keyframes ripple-animation {
    to {
        transform: scale(4);
        opacity: 0;
    }
}

/* Additional hover effects */
