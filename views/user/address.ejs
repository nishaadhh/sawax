<style>
:root {
    --primary: #1a1a1a;
    --secondary: #f9f9f9;
    --accent: #d4af37;
    --text: #2d2d2d;
    --light-text: #6b7280;
    --border: #e5e7eb;
    --shadow: rgba(0, 0, 0, 0.05);
    --gradient: linear-gradient(135deg, #d4af37 0%, #1a1a1a 100%);
}

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: 'Poppins', sans-serif;
}

body {
    background-color: var(--secondary);
    color: var(--text);
    overflow-x: hidden;
}

/* Container */
.container.mt-5 {
    max-width: 1300px;
    padding: 0 30px;
    margin-top: 50px !important;
}

/* Banner Area */
.banner-area {
    padding: 100px 0;
    background: var(--gradient);
    box-shadow: 0 4px 20px var(--shadow);
    border-radius: 12px;
    margin-bottom: 40px;
}

.breadcrumb-banner {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: space-between;
    gap: 20px;
}

.breadcrumb-banner h1 {
    font-size: 40px;
    font-weight: 700;
    color: #ffffff;
    margin-bottom: 15px;
    position: relative;
    letter-spacing: 1px;
}

.breadcrumb-banner h1::after {
    content: '';
    position: absolute;
    bottom: -10px;
    left: 0;
    width: 80px;
    height: 3px;
    background-color: var(--accent);
    transition: width 0.3s ease;
}

.breadcrumb-banner h1:hover::after {
    width: 120px;
}

.breadcrumb-banner nav {
    display: flex;
    align-items: center;
    font-size: 16px;
    color: var(--light-text);
}

.breadcrumb-banner nav a {
    color: #ffffff;
    text-decoration: none;
    margin: 0 8px;
    position: relative;
    transition: color 0.3s ease;
}

.breadcrumb-banner nav a:hover {
    color: var(--accent);
}

.breadcrumb-banner nav a::after {
    content: '';
    position: absolute;
    width: 100%;
    height: 2px;
    background: var(--accent);
    left: 0;
    bottom: -4px;
    transform: scaleX(0);
    transform-origin: right;
    transition: transform 0.3s ease;
}

.breadcrumb-banner nav a:hover::after {
    transform: scaleX(1);
    transform-origin: left;
}

.lnr-arrow-right {
    margin: 0 8px;
    color: #ffffff;
}

.col-left {
    display: flex;
    align-items: center;
    gap: 25px;
}

.profile-image-container {
    position: relative;
}

.rounded-circle {
    width: 90px;
    height: 90px;
    border-radius: 50%;
    object-fit: cover;
    border: 3px solid #ffffff;
    box-shadow: 0 4px 12px var(--shadow);
    transition: transform 0.3s ease;
}

.rounded-circle:hover {
    transform: scale(1.05);
}

.ms-3 {
    margin-left: 20px;
}

#fullName {
    font-size: 24px;
    font-weight: 600;
    color: #ffffff;
    letter-spacing: 0.5px;
}

#email {
    font-size: 16px;
    color: var(--light-text);
}

/* Sidebar */
.profile-sidebar {
    background-color: #ffffff;
    border-radius: 12px;
    padding: 25px;
    box-shadow: 0 6px 20px var(--shadow);
    margin-bottom: 40px;
    transition: transform 0.3s ease;
}

.profile-sidebar:hover {
    transform: translateY(-5px);
}

.profile-sidebar h3 {
    font-size: 22px;
    font-weight: 600;
    color: var(--primary);
    margin-bottom: 25px;
    border-bottom: 2px solid var(--accent);
    padding-bottom: 10px;
}

.profile-sidebar ul {
    list-style: none;
}

.profile-sidebar ul li {
    margin-bottom: 18px;
}

.profile-sidebar ul li a {
    font-size: 16px;
    color: var(--text);
    text-decoration: none;
    display: flex;
    align-items: center;
    padding: 10px;
    border-radius: 8px;
    transition: background-color 0.3s ease, color 0.3s ease;
}

.profile-sidebar ul li a:hover,
.profile-sidebar ul li a.active {
    background-color: var(--accent);
    color: #ffffff;
}

.profile-sidebar ul li a svg {
    margin-right: 12px;
}

/* Main Content */
.main-content {
    background-color: #ffffff;
    border-radius: 12px;
    padding: 35px;
    box-shadow: 0 6px 20px var(--shadow);
    transition: transform 0.3s ease;
}

.main-content:hover {
    transform: translateY(-5px);
}

.main-content h1 {
    font-size: 28px;
    font-weight: 700;
    color: var(--primary);
    margin-bottom: 25px;
    border-bottom: 2px solid var(--accent);
    padding-bottom: 10px;
}

.bg-white.p-4.shadow-sm.mb-4 {
    background-color: #ffffff;
    padding: 25px;
    border-radius: 12px;
    box-shadow: 0 4px 15px var(--shadow);
    margin-bottom: 25px;
    transition: transform 0.3s ease;
}

.bg-white.p-4.shadow-sm.mb-4:hover {
    transform: translateY(-3px);
}

.d-flex.justify-content-between.align-items-center.border-bottom.pb-2.mb-2 {
    border-bottom: 1px solid var(--border);
    padding-bottom: 15px;
    margin-bottom: 15px;
}

.font-weight-bold {
    font-size: 22px;
    font-weight: 600;
    color: var(--primary);
}

.text-muted {
    color: var(--light-text);
    font-size: 15px;
}

.text-muted span {
    display: inline-block;
}

.ml-4 {
    margin-left: 20px;
}

.bg-white.p-4.shadow-sm.mb-4 p {
    color: var(--text);
    font-size: 16px;
    line-height: 1.8;
    margin-bottom: 12px;
}

.mt-2 {
    margin-top: 12px;
}

.text-primary {
    color: var(--accent) !important;
    font-weight: 500;
    transition: color 0.3s ease;
}

.text-primary:hover {
    color: #b89c2f !important;
}

.text-danger {
    color: #ef4444 !important;
    font-weight: 500;
    transition: color 0.3s ease;
}

.text-danger:hover {
    color: #dc2626 !important;
}

/* Button */
.btn.btn-orange {
    display: inline-block;
    padding: 14px 35px;
    background-color: var(--accent);
    color: #ffffff;
    font-weight: 600;
    border-radius: 8px;
    border: none;
    text-transform: uppercase;
    letter-spacing: 1.2px;
    font-size: 14px;
    transition: all 0.3s ease;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
}

.btn.btn-orange:hover {
    background-color: #b89c2f;
    transform: translateY(-2px);
    box-shadow: 0 6px 15px rgba(0, 0, 0, 0.15);
}

/* Responsive Design */
@media (max-width: 992px) {
    .row {
        flex-direction: column;
    }

    .profile-sidebar {
        margin-bottom: 30px;
    }

    .main-content {
        padding: 25px;
    }
}

@media (max-width: 768px) {
    .banner-area {
        padding: 70px 0;
    }

    .breadcrumb-banner h1 {
        font-size: 32px;
    }

    .breadcrumb-banner nav {
        font-size: 14px;
    }

    .bg-white.p-4.shadow-sm.mb-4 {
        padding: 20px;
    }

    .font-weight-bold {
        font-size: 20px;
    }

    .btn.btn-orange {
        font-size: 13px;
        padding: 12px 25px;
    }
}

@media (max-width: 576px) {
    .container.mt-5 {
        padding: 0 20px;
    }

    .col-left {
        flex-direction: column;
        align-items: flex-start;
        gap: 15px;
    }

    .ms-3 {
        margin-left: 0;
        margin-top: 12px;
    }

    .rounded-circle {
        width: 70px;
        height: 70px;
    }
}


