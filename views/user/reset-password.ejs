<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Verify OTP | SAWAX</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@10/dist/sweetalert2.min.css">
    <style>
        :root {
            --primary: #1a1a1a;
            --secondary: #f8f8f8;
            --accent: #d4af37;
            --text: #333;
            --light-text: #777;
            --error: #dc3545;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Helvetica Neue', Arial, sans-serif;
        }

        body {
            background-color: var(--secondary);
            color: var(--text);
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .container {
            width: 100%;
            max-width: 420px;
            margin: auto;
            padding: 60px 20px;
        }

        .card {
            background: #fff;
            border-radius: 8px;
            box-shadow: 0 5px 30px rgba(0, 0, 0, 0.1);
            overflow: hidden;
        }

        .card-header {
            background-color: var(--primary);
            color: #fff;
            padding: 30px;
            text-align: center;
        }

        .card-header h2 {
            margin-bottom: 10px;
            font-weight: 300;
        }

        .card-header::after {
            content: '';
            display: block;
            margin: 10px auto 0;
            width: 60px;
            height: 3px;
            background-color: var(--accent);
        }

        .card-body {
            padding: 30px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            display: block;
            margin-bottom: 8px;
            font-weight: 500;
        }

        .form-control {
            width: 100%;
            padding: 12px;
            border: 1px solid #ccc;
            border-radius: 4px;
            font-size: 16px;
        }

        .form-error {
            color: var(--error);
            font-size: 12px;
            margin-top: 5px;
            display: none;
        }

        .btn {
            width: 100%;
            padding: 14px;
            background-color: var(--accent);
            color: var(--primary);
            border: none;
            border-radius: 4px;
            font-weight: bold;
            text-transform: uppercase;
            cursor: pointer;
            transition: all 0.3s;
        }

        .btn:hover {
            background-color: #c1a033;
        }

        .footer-text {
            text-align: center;
            margin-top: 20px;
            font-size: 14px;
            color: var(--light-text);
        }

        @media (max-width: 480px) {
            .container {
                padding: 40px 15px;
            }

            .card-header {
                padding: 20px;
            }

            .card-body {
                padding: 20px;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <form class="card" id="otpForm" method="POST" action="/verify-otp">
            <div class="card-header">
                <h2>OTP Verification</h2>
                <p>Enter the OTP sent to your email</p>
            </div>
            <div class="card-body">
                <div class="form-group">
                    <label for="otp">One Time Password</label>
                    <input type="text" id="otp" name="otp" class="form-control" placeholder="Enter 6-digit OTP" maxlength="6" required>
                    <div class="form-error" id="otp-error"></div>
                </div>
                <button type="submit" class="btn">Verify OTP</button>
                <div class="footer-text">
                    Didn't receive? <a href="/resend-otp" style="color: var(--accent); font-weight: 600;">Resend OTP</a>
                </div>
            </div>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
    <script>
        document.getElementById("otpForm").addEventListener("submit", function (e) {
            e.preventDefault();
            const otp = document.getElementById("otp").value.trim();
            const otpError = document.getElementById("otp-error");

            otpError.style.display = "none";
            otpError.innerHTML = "";

            if (!otp) {
                otpError.style.display = "block";
                otpError.innerHTML = "OTP is required.";
                return;
            }

            if (!/^\d{6}$/.test(otp)) {
                otpError.style.display = "block";
                otpError.innerHTML = "OTP must be 6 digits.";
                return;
            }

            const formData = new FormData(this);
            fetch("/verify-otp", {
                method: "POST",
                body: formData
            })
            .then(res => res.json())
            .then(data => {
                if (data.status) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Verified!',
                        text: 'OTP Verified Successfully',
                        confirmButtonText: 'Continue'
                    }).then(() => {
                        window.location.href = '/reset-password';
                    });
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Invalid OTP',
                        text: data.message || 'Verification failed.',
                        confirmButtonText: 'Retry'
                    });
                }
            })
            .catch(error => {
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: 'Something went wrong. Please try again.',
                    confirmButtonText: 'OK'
                });
            });
        });
    </script>
</body>
</html>
