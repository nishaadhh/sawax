<script>
    // Toggle mobile sidebar for search filter
document.addEventListener('DOMContentLoaded', function() {
    // Create filter toggle button if it doesn't exist
    const shopActions = document.querySelector('.shop-actions');
    if (!document.querySelector('.filter-toggle')) {
        const filterToggle = document.createElement('button');
        filterToggle.className = 'filter-toggle';
        filterToggle.innerHTML = '<i class="fa-solid fa-filter"></i> Filters';
        filterToggle.onclick = toggleSidebar;
        shopActions.insertBefore(filterToggle, shopActions.firstChild);
    }

    // Create overlay if it doesn't exist
    if (!document.querySelector('.sidebar-overlay')) {
        const overlay = document.createElement('div');
        overlay.className = 'sidebar-overlay';
        overlay.onclick = closeSidebar;
        document.body.appendChild(overlay);
    }

    // close button if it doesn't exist
    const sidebar = document.querySelector('.shop-sidebar');
    if (!sidebar.querySelector('.sidebar-close')) {
        const closeBtn = document.createElement('button');
        closeBtn.className = 'sidebar-close';
        closeBtn.innerHTML = '×';
        closeBtn.onclick = closeSidebar;
        sidebar.insertBefore(closeBtn, sidebar.firstChild);
    }
});

function toggleSidebar() {
    const sidebar = document.querySelector('.shop-sidebar');
    const overlay = document.querySelector('.sidebar-overlay');
    
    sidebar.classList.toggle('active');
    overlay.classList.toggle('active');
    
    // Prevent body scroll when sidebar is open
    if (sidebar.classList.contains('active')) {
        document.body.style.overflow = 'hidden';
    } else {
        document.body.style.overflow = '';
    }
}

function closeSidebar() {
    const sidebar = document.querySelector('.shop-sidebar');
    const overlay = document.querySelector('.sidebar-overlay');
    
    sidebar.classList.remove('active');
    overlay.classList.remove('active');
    document.body.style.overflow = '';
}

// Close sidebar when clicking on a filter choosing
document.addEventListener('click', function(e) {
    if (e.target.closest('.category-link') || e.target.closest('.apply-filter')) {
        if (window.innerWidth < 992) {
            setTimeout(closeSidebar, 300); // Small delay to see the filter applied
        }
    }
});
</script>
