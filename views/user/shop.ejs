async function addToWishlist(productId, el) {
    const icon = el.querySelector('i');
    el.style.pointerEvents = 'none';

    try {
        const response = await fetch(`/addToWishlist/${productId}`, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' }
        });

        const data = await response.json();

        if (data.success) {
            if (typeof data.added !== 'undefined') {
                icon.classList.toggle('wishlist-active', data.added);
            } else {
                icon.classList.toggle('wishlist-active');
            }

            Swal.fire({
                icon: 'success',
                title: data.added ? 'Added to Wishlist!' : data.removed ? 'Removed from Wishlist!' : 'Wishlist Updated',
                text: data.message || '',
                confirmButtonColor: '#d4af37'
            });
        } else {
            Swal.fire({
                icon: 'error',
                title: 'Failed!',
                text: data.message || '',
                confirmButtonColor: '#d4af37'
            });
        }
    } catch (error) {
        Swal.fire({
            icon: 'error',
            title: 'Error!',
            text: 'An error occurred.',
            confirmButtonColor: '#d4af37'
        });
    } finally {
        el.style.pointerEvents = '';
    }
}



