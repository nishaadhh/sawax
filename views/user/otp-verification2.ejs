<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>OTP Verification</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #ffffff 0%, #ffffff 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        .card {
            border-radius: 15px;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
            border: none;
            backdrop-filter: blur(10px);
            background: rgba(255, 255, 255, 0.95);
        }
        .otp-input {
            width: 50px;
            height: 50px;
            text-align: center;
            font-size: 20px;
            font-weight: bold;
            border: 2px solid #e9ecef;
            border-radius: 10px;
            margin: 0 5px;
            transition: all 0.3s ease;
        }
        .otp-input:focus {
            border-color: #667eea;
            box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
            outline: none;
        }
        .otp-input.is-invalid {
            border-color: #dc3545;
            box-shadow: 0 0 0 0.2rem rgba(220, 53, 69, 0.25);
        }
        .btn-primary {
            background: linear-gradient(135deg,#d4af37 0%, #655a36  100%);
            border: none;
            border-radius: 10px;
            padding: 12px 30px;
            font-weight: 600;
            transition: all 0.3s ease;
        }
        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
        }
        .btn-outline-secondary {
            border-radius: 10px;
            padding: 12px 30px;
            font-weight: 600;
        }
        .text-primary {
            color: #d4af37 !important;
        }
        .timer {
            font-weight: bold;
            color: #dc3545;
        }
        .resend-link {
            color: #d4af37;
            text-decoration: none;
            cursor: pointer;
        }
        .resend-link:hover {
            text-decoration: underline;
        }
        .invalid-feedback {
            color: #dc3545;
            font-size: 0.875rem;
            text-align: center;
            margin-top: 5px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5">
                <div class="card">
                    <div class="card-body p-5">
                        <div class="text-center mb-4">
                            <h2 class="text-primary fw-bold">Verify OTP</h2>
                            <p class="text-muted">We've sent a 6-digit verification code to your email address</p>
                        </div>

                        <div id="alertContainer"></div>

                        <form id="otpForm">
                            <div class="mb-4">
                                <label class="form-label fw-semibold text-center w-100 mb-3">Enter 6-digit OTP</label>
                                <div class="d-flex justify-content-center">
                                    <input type="text" class="otp-input" name="otp1" maxlength="1" pattern="[0-9]" required>
                                    <input type="text" class="otp-input" name="otp2" maxlength="1" pattern="[0-9]" required>
                                    <input type="text" class="otp-input" name="otp3" maxlength="1" pattern="[0-9]" required>
                                    <input type="text" class="otp-input" name="otp4" maxlength="1" pattern="[0-9]" required>
                                    <input type="text" class="otp-input" name="otp5" maxlength="1" pattern="[0-9]" required>
                                    <input type="text" class="otp-input" name="otp6" maxlength="1" pattern="[0-9]" required>
                                </div>
                                <div class="invalid-feedback" id="otpError"></div>
                            </div>

                            <button type="submit" class="btn btn-primary w-100 mb-3" id="verifyBtn">
                                <span class="btn-text">Verify OTP</span>
                                <span class="spinner-border spinner-border-sm d-none" role="status"></span>
                            </button>
                        </form>

                        <div class="text-center">
                            <p class="mb-2">
                                Time remaining: <span class="timer" id="timer">05:00</span>
                            </p>
                            <p class="text-muted">
                                Didn't receive the code? 
                                <span class="resend-link" id="resendOtp" style="display: none;">Resend OTP</span>
                            </p>
                        </div>

                        <div class="text-center mt-3">
                            <a href="/forgot-password" class="text-muted text-decoration-none">
                                <i class="fas fa-arrow-left me-2"></i>Back to Email
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // OTP Input handling
        const otpInputs = document.querySelectorAll('.otp-input');
        const otpForm = document.getElementById('otpForm');
        const otpError = document.getElementById('otpError');
        const verifyBtn = document.getElementById('verifyBtn');
        const btnText = verifyBtn.querySelector('.btn-text');
        const spinner = verifyBtn.querySelector('.spinner-border');
        const resendElement = document.getElementById('resendOtp');
        const timerElement = document.getElementById('timer');

        // Input validation function
        function validateInput(input) {
            const value = input.value.trim();
            if (!/^[0-9]$/.test(value)) {
                input.classList.add('is-invalid');
                return false;
            }
            input.classList.remove('is-invalid');
            return true;
        }

        // Clear all error states
        function clearErrors() {
            otpInputs.forEach(input => input.classList.remove('is-invalid'));
            otpError.textContent = '';
        }

        otpInputs.forEach((input, index) => {
            input.addEventListener('input', function(e) {
                const value = this.value.trim();
                // Sanitize input to allow only numbers
                if (value && !/^[0-9]$/.test(value)) {
                    this.value = '';
                    this.classList.add('is-invalid');
                    otpError.textContent = 'Please enter a valid digit (0-9)';
                    return;
                }
                clearErrors();
                
                if (value.length === 1 && index < otpInputs.length - 1) {
                    otpInputs[index + 1].focus();
                }
            });
            
            input.addEventListener('keydown', function(e) {
                if (e.key === 'Backspace' && this.value === '' && index > 0) {
                    otpInputs[index - 1].focus();
                }
            });
            
            input.addEventListener('paste', function(e) {
                e.preventDefault();
                const paste = e.clipboardData.getData('text').trim();
                if (paste.length === 6 && /^\d{6}$/.test(paste)) {
                    clearErrors();
                    otpInputs.forEach((input, i) => {
                        input.value = paste[i] || '';
                        input.classList.remove('is-invalid');
                    });
                    otpInputs[otpInputs.length - 1].focus();
                } else {
                    otpError.textContent = 'Pasted OTP must be 6 digits';
                    otpInputs.forEach(input => input.classList.add('is-invalid'));
                }
            });
        });

        // Timer functionality
        let timeLeft = 300; // 5 minutes in seconds
        const timer = setInterval(() => {
            const minutes = Math.floor(timeLeft / 60);
            const seconds = timeLeft % 60;
            timerElement.textContent = `${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
            
            if (timeLeft <= 0) {
                clearInterval(timer);
                timerElement.textContent = '00:00';
                resendElement.style.display = 'inline';
            }
            timeLeft--;
        }, 1000);

        // Form submission with validation
        otpForm.addEventListener('submit', async function(e) {
            e.preventDefault();
            clearErrors();

            const otpValues = Array.from(otpInputs).map(input => input.value.trim());
            
            // Validate all inputs
            let isValid = true;
            otpValues.forEach((value, index) => {
                if (!value || !/^[0-9]$/.test(value)) {
                    otpInputs[index].classList.add('is-invalid');
                    isValid = false;
                }
            });

            if (!isValid) {
                otpError.textContent = 'Please enter a valid 6-digit OTP';
                return;
            }

            const [otp1, otp2, otp3, otp4, otp5, otp6] = otpValues;
            
            btnText.textContent = 'Verifying...';
            spinner.classList.remove('d-none');
            verifyBtn.disabled = true;
            
            try {
                const response = await fetch('/verify-forgot-password-otp', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ otp1, otp2, otp3, otp4, otp5, otp6 })
                });
                
                const data = await response.json();
                
                if (data.success) {
                    window.location.href = '/reset-password';
                } else {
                    showAlert(data.message || 'Invalid OTP. Please try again.', 'danger');
                    otpInputs.forEach(input => input.classList.add('is-invalid'));
                    otpError.textContent = data.message || 'Invalid OTP';
                }
            } catch (error) {
                showAlert('An error occurred. Please try again.', 'danger');
                otpError.textContent = 'An error occurred';
            } finally {
                btnText.textContent = 'Verify OTP';
                spinner.classList.add('d-none');
                verifyBtn.disabled = false;
            }
        });

        // Resend OTP with rate limiting
        let resendAttempts = 0;
        const maxResendAttempts = 3;
        
        resendElement.addEventListener('click', async function() {
            if (resendAttempts >= maxResendAttempts) {
                showAlert('Maximum resend attempts reached. Please try again later.', 'danger');
                return;
            }

            try {
                const response = await fetch('/resend-forgot-password-otp', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    }
                });
                
                const data = await response.json();
                
                if (data.success) {
                    showAlert('OTP sent successfully!', 'success');
                    // Reset timer
                    timeLeft = 300;
                    resendElement.style.display = 'none';
                    resendAttempts++;
                    clearInterval(timer);
                    const newTimer = setInterval(() => {
                        const minutes = Math.floor(timeLeft / 60);
                        const seconds = timeLeft % 60;
                        timerElement.textContent = `${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
                        
                        if (timeLeft <= 0) {
                            clearInterval(newTimer);
                            timerElement.textContent = '00:00';
                            resendElement.style.display = 'inline';
                        }
                        timeLeft--;
                    }, 1000);
                } else {
                    showAlert(data.message || 'Failed to resend OTP', 'danger');
                }
            } catch (error) {
                showAlert('An error occurred. Please try again.', 'danger');
            }
        });

        function showAlert(message, type) {
            const alertContainer = document.getElementById('alertContainer');
            alertContainer.innerHTML = `
                <div class="alert alert-${type} alert-dismissible fade show" role="alert">
                    ${message}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            `;
        }
    </script>
</body>
</html>