  }

  .buy-now:hover {
    background-color: #333;
    transform: scale(1.05);
  }

  .buy-now:disabled {
    background-color: #ccc;
    cursor: not-allowed;
    transform: none;
  }

  .wishlist-btn {
    padding: clamp(8px, 1vw, 10px);
    cursor: pointer;
    font-size: clamp(0.9rem, 1.5vw, 1.2rem);
    color: #717070;
