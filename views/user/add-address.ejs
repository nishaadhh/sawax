        <div class="loading-overlay" id="loadingOverlay">
            <div class="spinner"></div>
        </div>

        <div class="form-row mb-50">
            <div class="form-group">
                <input type="text" class="form-control" id="addressType" name="addressType" placeholder=" " required>
