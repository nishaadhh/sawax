    z-index: -1;
}

@keyframes backgroundFloat {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-20px); }
}

.banner-area {
    background: linear-gradient(135deg, #d4af37 0%, rgb(43, 42, 42) 100%);
    padding: 4rem 0 3rem;
    color: white;
    position: relative;
    overflow: hidden;
}

.banner-area::before {
