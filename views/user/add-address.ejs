<style>
@import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap');

:root {
    --primary: #0A0E27;
    --primary-light: #1A1F3A;
    --secondary: #F8FAFC;
    --accent: #D4AF37;
    --accent-light: #E8C547;
    --accent-dark: #B8941F;
    --teal: #046963;
    --teal-light: #0891B2;
    --text: #1E293B;
    --text-light: #64748B;
    --text-muted: #94A3B8;
    --border: #E2E8F0;
    --border-focus: #CBD5E1;
    --success: #10B981;
    --warning: #F59E0B;
    --error: #EF4444;
    --glass: rgba(255, 255, 255, 0.1);
    --glass-border: rgba(255, 255, 255, 0.2);
    --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
