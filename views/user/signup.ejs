            font-size: 14px;
            margin-top: 5px;
            display: none;
        }

        .referral-info {
            margin-top: 5px;
        }

        .referral-info small {
            color: var(--light-text);
        }

        .referral-validation {
            margin-top: 5px;
            font-size: 14px;
            font-weight: 500;
        }

        .referral-validation.valid {
            color: var(--success);
        }

        .referral-validation.invalid {
            color: var(--error);
        }

        .terms-agreement {
