<style>
/* Loading Animation */
.loading-screen {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: transparent;
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 9999;
    transition: opacity 0.3s ease;
}

.loading-spinner {
    width: 40px;
    height: 40px;
    border: 4px solid #f3f3f3;
    border-top: 4px solid #d1a206;
    border-radius: 50%;
    animation: spin 1s linear infinite;
}

@keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
}

/* Define pulse animation */
@keyframes pulse {
    0% {
        transform: scale(1);
        opacity: 1;
    }
    50% {
        transform: scale(1.1);
        opacity: 0.7;
    }
    100% {
        transform: scale(1);
        opacity: 1;
    }
}

.btn-primary {
    background: linear-gradient(135deg, #d1a206, #000000);
    color: rgb(0, 0, 0);
    font-weight: 600;
    border-radius: 4px;
    transition: all 0.3s;
    border: none;
    cursor: pointer;
    text-transform: uppercase;
    letter-spacing: 1px;
    font-size: 14px;
    display: inline-block;
    padding: 12px 30px;
}





.add-to-cart {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    padding: 15px 25px;
    background: linear-gradient(135deg,#d4af37, #b18912);
    color: white;
    text-decoration: none;
    border-radius: 10px;
    font-weight: 500;
    transition: all 0.3s ease;
    margin-top: -10px;
}

.add-to-cart:hover {
    transform: translateY(-3px);
    box-shadow: 0 10px 25px rgba(26, 26, 26, 0.3);
    text-decoration: none;
    color: white;
}

.btn-explore {
    position: relative;
    overflow: hidden;
    background: transparent;
    border: 2px solid #d4af37;
    color: #ffc400;
    font-weight: 600;
    border-radius: 4px;
    transition: all 0.3s ease;
    cursor: pointer;
    text-transform: uppercase;
    letter-spacing: 1px;
    font-size: 14px;
    display: inline-block;
    padding: 12px 30px;
}

/* Shiny moving effect */
.btn-explore::before {
    content: "";
    position: absolute;
    top: 0;
    left: -150%;
    width: 200%;
    height: 100%;
    background: linear-gradient(
        120deg,
        rgba(255, 255, 255, 0) 40%,
        #000000 50%,
        rgba(255, 255, 255, 0) 60%
    );
    opacity: 0.6;
    background-size: 200% 100%;
    animation: buttonShine 4s linear infinite;
}

@keyframes buttonShine {
    0% {
        left: -150%;
    }
    100% {
        left: 150%;
    }
}

/* Hover styling */
.btn-explore:hover {
    transform: translateY(-3px);
    background: #00000000;
    color: #ffc400c4;
}


.wishlist i {
    color: #000; 
    cursor: pointer;
}

.wishlist i.wishlist-active {
    color: red !important; 
}


.shiny-text {
  color: #342c2ca4; 
  background: linear-gradient(
    120deg,
    rgba(255, 255, 255, 0) 40%,
    #ffc400 50%,
    rgba(255, 255, 255, 0) 60%
  );
  font-family:  "Georgia", serif;
  background-size: 200% 100%;
  -webkit-background-clip: text;
  background-clip: text;
  display: inline-block;
  animation: shine 12s linear infinite;
}

@keyframes shine {
  0% {
    background-position: 100%;
  }
  100% {
    background-position: -100%;
  }
}

.shiny-text.disabled {
