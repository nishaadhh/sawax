<!DOCTYPE HTML>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>SAWAX Admin</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" type="image/x-icon" href="/admin-assets/img/favicon.ico">
    <link href="/admin-assets/css/main.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@10.16.6/dist/sweetalert2.min.css">
    <script src="https://kit.fontawesome.com/16d4885483.js" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <link rel="icon" type="image/x-icon" href="/img/fav-icon.png">
    <style>
        :root {
            --primary-color: #1e3a8a;
            --secondary-color: #3b82f6;
            --accent-color: #60a5fa;
            --text-color: #f3f4f6;
            --hover-color: #93c5fd;
            --background-color: #f9fafb;
            --shadow-color: rgba(0, 0, 0, 0.1);
            --transition: all 0.3s ease;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            background-color: linear-gradient(#a855f7,#3b0764);
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            color: #1f2937;
            line-height: 1.6;
            overflow-x: hidden;
        }

        .navbar-aside {
            background: linear-gradient(180deg, #000000, #45146b);
            width: 250px;
            height: 100vh;
            position: fixed;
            left: 0;
            top: 0;
            z-index: 1000;
            transition: var(--transition);
            box-shadow: 4px 0 12px var(--shadow-color);
        }

        .logo.side {
            padding: 1.5rem;
            background: transparent;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .brand-wrap .logo {
            max-height: 10px;
            transition: var(--transition);
        }

        .menu-aside {
            list-style: none;
            padding: 1rem 0;
        }

        .menu-item {
            margin: 0.5rem 0;
        }

        .menu-link {
            display: flex;
            align-items: center;
            padding: 0.75rem 1.5rem;
            color: var(--text-color);
            text-decoration: none;
            font-size: 0.95rem;
            font-weight: 500;
            transition: var(--transition);
            border-left: 4px solid transparent;
        }

        .menu-link:hover, .menu-link.active {
            background-color: var(--secondary-color);
            border-left-color: var(--accent-color);
            transform: translateX(5px);
            box-shadow: inset 0 0 8px rgba(0, 0, 0, 0.2);
        }

        .menu-link .icon {
            font-size: 1.2rem;
            margin-right: 1rem;
            color: var(--accent-color);
            transition: var(--transition);
        }

        .menu-link:hover .icon {
            transform: scale(1.2);
        }

        .main-wrap {
            margin-left: 250px;
            transition: var(--transition);
        }

        .main-header {
            background: #ffffff;
            box-shadow: 0 2px 4px var(--shadow-color);
            padding: 1rem;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .col-nav {
            display: flex;
            align-items: center;
        }

        .btn-icon {
            background: none;
            border: none;
            color: #4b5563;
            font-size: 1.2rem;
            cursor: pointer;
            padding: 0.5rem;
            border-radius: 50%;
            transition: var(--transition);
        }

        .btn-icon:hover {
            background-color: var(--accent-color);
            color: white;
            transform: rotate(20deg);
        }

        .dropdown-menu {
            background: #1f2937;
            border-radius: 8px;
            border: none;
            box-shadow: 0 4px 20px var(--shadow-color);
            min-width: 200px;
            padding: 0.5rem 0;
        }

        .dropdown-item {
            color: var(--text-color);
            padding: 0.75rem 1.5rem;
            font-size: 0.95rem;
            transition: var(--transition);
        }

        .dropdown-item:hover {
            background-color: var(--secondary-color);
            color: white;
            transform: translateX(5px);
        }

        .img-xs {
            width: 36px;
            height: 36px;
            object-fit: cover;
            border-radius: 50%;
            border: 2px solid var(--accent-color);
            transition: var(--transition);
        }

        .img-xs:hover {
            transform: scale(1.1);
            box-shadow: 0 0 8px var(--shadow-color);
        }

        .btn-aside-minimize {
            display: none;
        }

        /* Responsive Design */
        @media (max-width: 992px) {
            .navbar-aside {
                width: 80px;
                overflow: hidden;
            }

            .main-wrap {
                margin-left: 80px;
            }

            .menu-link span.text {
                display: none;
            }

            .menu-link {
                justify-content: center;
                padding: 1rem;
            }

            .menu-link .icon {
                margin-right: 0;
            }

            .logo.side {
                justify-content: center;
            }

            .brand-wrap .logo {
                max-height: 40px;
            }

            .btn-aside-minimize {
                display: block;
            }
        }

        @media (max-width: 576px) {
            .navbar-aside {
                transform: translateX(-100%);
                width: 250px;
            }

            .navbar-aside.active {
                transform: translateX(0);
            }

            .main-wrap {
                margin-left: 0;
            }

            .btn-mobile {
                display: block !important;
            }

            .menu-link span.text {
                display: inline;
            }
        }

        /* Animation for screen overlay */
        .screen-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
            z-index: 999;
            opacity: 0;
            visibility: hidden;
            transition: var(--transition);
        }

        .navbar-aside.active + .screen-overlay {
            opacity: 1;
            visibility: visible;
        }
    </style>
</head>
<body>
    <div class="screen-overlay"></div>
    <aside class="navbar-aside" id="offcanvas_aside">
        <div class="logo side">
            <a href="/admin" class="brand-wrap">
                <div>
                    <img src="/img/sawaxLogo.png" alt="SAWAX Logo" class="logo">
                </div>
            </a>
            <div>
                <button class="btn btn-icon btn-aside-minimize"> 
                    <i class="fas fa-bars"></i>
                </button>
            </div>
        </div>
        <nav>
            <ul class="menu-aside">
                <% const menuItems = [
                    { link: '/admin/sales-report', icon: 'fa-solid fa-square-poll-horizontal', text: 'Sales Report' },
                    { link: '/admin/users', icon: 'fas fa-users', text: 'Customers' },
                    { link: '/admin/category', icon: 'fas fa-list', text: 'Category' },
                    { link: '/admin/addProducts', icon: 'fa-solid fa-box-open', text: 'Add Product' },
                    { link: '/admin/products', icon: 'fa-solid fa-truck-fast', text: 'Products' },
                    { link: '/admin/banner', icon: 'fa-solid fa-money-check', text: 'Banner' },
                    { link: '/admin/orders', icon: 'fa-brands fa-shopify', text: 'Orders' },
                    { link: '/admin/couponManagement', icon: 'fa-solid fa-tags', text: 'Coupons' }
                ]; %>
                
                <% menuItems.forEach(item => { %>
                    <li class="menu-item">
                        <a class="menu-link" href="<%= item.link %>">
                            <i class="icon <%= item.icon %>"></i>
                            <span class="text"><%= item.text %></span>
                        </a>
                    </li>
                <% }); %>
            </ul>
        </nav>
    </aside>
    <main class="main-wrap">
        <header class="main-header navbar">
            <div class="col-search">
                <!-- Add search functionality if needed -->
            </div>
            <div class="col-nav">
                <button class="btn btn-icon btn-mobile me-auto" data-trigger="#offcanvas_aside"> 
                    <i class="fas fa-bars"></i>
                </button>
                <ul class="nav">
                    <li class="dropdown nav-item">
                        <a class="dropdown-toggle" data-bs-toggle="dropdown" href="#" id="dropdownAccount" aria-expanded="false"> 
                            <img class="img-xs rounded-circle" src="/img/partner2.jpg" alt="User">
                        </a>
                        <div class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownAccount">
                            <a class="dropdown-item text-secondary" href="/admin/profile">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-fill" viewBox="0 0 16 16">
                                    <path d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6"/>
                                </svg> Profile
                            </a>
                            <a class="dropdown-item text-danger" href="#" onclick="confirmAdminLogout(event)">
                                <i class="fas fa-sign-out-alt"></i> Logout
                            </a>
                        </div>
                    </li>
                </ul>
            </div>
        </header>

        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script>
            function confirmAdminLogout(event) {
                event.preventDefault();
                Swal.fire({
                    title: "Are you sure?",
                    text: "You will be logged out of the admin panel!",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#d33",
                    cancelButtonColor: "#3085d6",
                    confirmButtonText: "Yes, Logout!",
                }).then((result) => {
                    if (result.isConfirmed) {
                        window.location.href = "/admin/logout";
                    }
                });
            }

            // Toggle sidebar on mobile
            document.querySelector('.btn-mobile').addEventListener('click', () => {
                document.querySelector('.navbar-aside').classList.toggle('active');
            });

            // Close sidebar when clicking overlay
            document.querySelector('.screen-overlay').addEventListener('click', () => {
                document.querySelector('.navbar-aside').classList.remove('active');
            });

            // Toggle sidebar width on desktop
            document.querySelector('.btn-aside-minimize').addEventListener('click', () => {
                document.querySelector('.navbar-aside').classList.toggle('minimized');
                document.querySelector('.main-wrap').classList.toggle('expanded');
            });
        </script>
</body>
</html>